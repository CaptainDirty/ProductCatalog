@model List<Category>

<div class="text-center">
    <h3 class="mt-3">Категории</h3>

    <a href="/Category/Add">Добавить новую категорию</a>

    <table class="table">
        <thead>
        <th>#</th>
        <th>Название</th>
        <th></th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="/Category/Edit/@item.Id">Редактировать</a>
                        <a href="/Category/Delete/@item.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>